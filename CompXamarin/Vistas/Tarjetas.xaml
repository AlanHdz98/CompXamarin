                             Grid.Row="2">

                            <Button Text="OK" x:Name="btnvolver4" Clicked="btnvolver4_Clicked"  Grid.Column="1" 
                        Grid.Row="2" />
                            <Button Text="Cancelar" 
                        Grid.Column="1"
                        Grid.Row="2" />

                        </StackLayout>


                    </Grid>
                </Frame>


            </Grid>

        </ScrollView>
       
       
        
    </ContentPage.Content>
